<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/sp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp">

        <TextView
            android:id="@+id/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/playfairdisplay_bold"
            android:paddingStart="10dp"
            android:text="Good to see you Again!"
            android:textColor="#51408D"
            android:textSize="22sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Heading"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/lighter_purple"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/purple"
            android:fontFamily="@font/playfairdisplay_regular"
            android:hint="Enter Email Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/purple" />

        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email_login"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/lighter_purple"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/purple"
            android:fontFamily="@font/playfairdisplay_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/purple" />


        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/password_login"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/purple"
            android:fontFamily="@font/playfairdisplay_regular"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acc_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_btn"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/playfairdisplay_regular"
            android:text="Don't have an account?"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signup_link"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_btn"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/acc_quiz"
            android:fontFamily="@font/playfairdisplay_regular"
            android:linksClickable="true"
            android:paddingLeft="3dp"
            android:text="@string/sign_up"
            android:textColor="#8756cb"
            android:textSize="18dp"
            android:textStyle="bold" />





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>